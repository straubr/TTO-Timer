<?xml version="1.0" encoding="utf-8" ?>
<otrs_config version="1.0" init="Config">
    <ConfigItem Name="Frontend::Output::FilterElementPost###DefaultTimeUnitsFilter" Required="0" Valid="1">
        <Description Translatable="1">This configuration registers an OutputFilter module that inserts a default time unit into the accounted time field.</Description>
        <Group>TTO-Timer</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
            <Setting>
                <Hash>
                    <Item Key="Module">Kernel::Output::HTML::TTO::DefaultTimeUnitsFilter</Item>
                    <Item Key="Templates">
                        <Hash>
                            <Item Key="AgentTicketPhone">1</Item>
                            <Item Key="AgentTicketEmail">1</Item>
                            <Item Key="AgentTicketCompose">1</Item>
                            <Item Key="AgentTicketNote">1</Item>
                            <Item Key="AgentTicketPending">1</Item>
                            <Item Key="AgentTicketFreeText">1</Item>
                        </Hash>
                    </Item>
                </Hash>
            </Setting>
    </ConfigItem>
    <ConfigItem Name="TTO::OutputFilter::Config::DefaultTimeUnitsValue" Required="0" Valid="0">
        <Description Translatable="1">Defines the default value that should be inserted.</Description>
        <Group>TTO-Timer</Group>
        <SubGroup>Config::TimeAccounting</SubGroup>
            <Setting>
                <String></String>
            </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Template::GenerateBlockHooks###100-TTO-Timer" Required="1" Valid="1">
        <Description Translatable="1">Generate HTML comment hooks for the specified blocks so that filters can use them.</Description>
        <Group>TTO-Timer</Group>
        <SubGroup>Hooks</SubGroup>
        <Setting>
            <Hash>
                <Item Key="AgentTicketZoom">
                    <Array>
                        <Item>CustomerTable</Item>
                    </Array>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Output::FilterElementPost###TTOTimerHook" Required="0" Valid="1">
        <Description Translatable="1">Inject HTML and JavaScript to show a timer in AgentTicketZoom.</Description>
        <Group>TTO-Timer</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterElementPost::TTOTimerHook</Item>
                <Item Key="Debug">0</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketZoom">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
</otrs_config>
